{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "paths": {
      "vertc-design-system": ["./packages/design-system/src/index.ts"],
      "vertc-design-system/*": ["./packages/design-system/src/*"]
    }
  }
}
